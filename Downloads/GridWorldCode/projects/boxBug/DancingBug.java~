import info.gridworld.actor.Bug;


public class DancingBug extends Bug
{
    private int steps;
    private int[] timetoturn;

    public DancingBug(int[] number)
    {
        timetoturn = number;
    }

    public void act(){
        for (int i = 0; i < timetoturn.length;i++){
	    for (int j = 0; j < timetoturn[i];j++)
		turn();
	    move();
	}
	act();
    }
}

